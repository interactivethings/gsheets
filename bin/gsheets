#!/usr/bin/env node

require('isomorphic-fetch');

var rw = require('rw'),
    minimist = require('minimist'),
    gs = require('../gsheets'),
    dsvFormat = require('d3-dsv').dsvFormat;

var argv = minimist(process.argv.slice(2));

if (!argv.out) {
  argv.out = '/dev/stdout';
}

if (!argv.id) {
  console.error("Please provide a spreadsheet id");
  process.exit(1);
}

if (!argv.title) {
  console.error("Please provide a worksheet title");
  process.exit(1);
}

if (!argv.key) {
  console.error("Please provide a API key");
  process.exit(1);
}


gs.getWorksheet(argv.id, argv.title. argv.key).then(handleResponse).catch(handleError);

function handleError(err) {
  console.error(err.toString());
  process.exit(1);
}

function handleResponse(res) {
  var delimiter = argv.dsv;
  if (argv.csv) {
    delimiter = ',';
  } else if (argv.tsv) {
    delimiter = "\t";
  }

  var data;
  if (delimiter) {
    data = dsvFormat(delimiter).format(res.data);
  } else {
    data = JSON.stringify(res, null, argv.pretty ? 2 : undefined);
  }

  rw.writeFileSync(argv.out, data, 'utf8');
}
