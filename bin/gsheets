#!/usr/bin/env node

require("isomorphic-fetch");
require("dotenv").config();

var rw = require("rw"),
  minimist = require("minimist"),
  getWorksheet = require("../src"),
  dsvFormat = require("d3-dsv").dsvFormat;

var argv = minimist(process.argv.slice(2));

if (!argv.out) {
  argv.out = "/dev/stdout";
}

if (!argv.key) {
  console.error("Please provide a spreadsheet key");
  process.exit(1);
}

if (!argv.title) {
  console.error("Please provide a worksheet title");
  process.exit(1);
}

if (!process.env.GSHEETS_API_KEY) {
  console.error("Please provide a GSHEETS_API_KEY variable in your .env file");
  process.exit(1);
}

getWorksheet(argv.id, argv.title, process.env.GSHEETS_API_KEY)
  .then(handleResponse)
  .catch(handleError);

function handleError(err) {
  console.error(err.toString());
  process.exit(1);
}

function handleResponse(res) {
  var delimiter = argv.dsv;
  if (argv.csv) {
    delimiter = ",";
  } else if (argv.tsv) {
    delimiter = "\t";
  }

  var data;
  if (delimiter) {
    data = dsvFormat(delimiter).format(res.data);
  } else {
    data = JSON.stringify(res, null, argv.pretty ? 2 : undefined);
  }

  rw.writeFileSync(argv.out, data, "utf8");
}
